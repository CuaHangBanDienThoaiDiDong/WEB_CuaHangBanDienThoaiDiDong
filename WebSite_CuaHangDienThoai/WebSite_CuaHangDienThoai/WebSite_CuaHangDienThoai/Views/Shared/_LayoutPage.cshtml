            if (inputValue !== "") {
                searchSuggestions.style.display = "block"; // Hiển thị khung gợi ý
            } else {
                searchSuggestions.style.display = "none"; // Ẩn khung gợi ý nếu ô input rỗng
            }
        });





        document.addEventListener("DOMContentLoaded", function () {
            var searchBar = document.getElementById("search");
            var searchButtonMain = document.querySelector("[data-widget='navbar-search']");
            var searchButtonSearch = document.querySelector(".nav-search .btn-search");
            var navMain = document.querySelector(".nav-main");
            var navSearch = document.querySelector(".nav-search");
            var searchSuggestions = document.querySelector(".search-suggestions");
            var main = document.querySelector(".main");
            var bg = document.querySelector(".bg-sg");

            searchButtonMain.addEventListener("click", function (event) {
                event.preventDefault();
                navMain.style.display = "none"; // Ẩn nav-main
                navSearch.style.display = "block"; // Hiển thị nav-search
                bg.style.display = "block"; // Hiển thị nav-search
                // Áp dụng hiệu ứng mờ mờ khi hiển thị nav-search

            });

            searchButtonSearch.addEventListener("click", function (event) {
                event.preventDefault();
                navMain.style.display = "block"; // Hiển thị nav-main
                navSearch.style.display = "none"; // Ẩn nav-search
                bg.style.display = "none"; // Ẩn nav-search


            });


            bg.addEventListener("click", function (event) {
                event.preventDefault();
                navMain.style.display = "block"; // Hiển thị nav-main
                navSearch.style.display = "none"; // Ẩn nav-search
                bg.style.display = "none"; // Ẩn nav-search


            });



            searchBar.addEventListener("input", function () {
                var inputValues = searchBar.value.trim();
                if (inputValues.length > 0) {
                    searchSuggestions.style.display = "block";
                } else {
                    searchSuggestions.style.display = "none";
                }
            });

            searchBar.addEventListener("focus", function () {
                searchSuggestions.style.display = "block";
                navSearch.style.filter = "blur(8px)";
                navSearch.style.backdropFilter = "blur(8px)";
            });

        });



    </script>

