    <style>
        /* CSS cho nút được chọn */
        .btnloadPricebyCapcity {
            background-color: transparent; 
        }
        .box03 {
            margin-bottom: 10px;
        }

        .box03__item.act {
            border-color: #2f80ed;
            color: white;
        }

        .box03__item {
            border: 1px solid #e0e0e0;
            border-radius: 2px;
            color: white;
            display: inline-block;
            font-size: 13px;
            min-width: 67px;
            padding: 0 15px;
            text-align: center;
            margin-bottom: 5px;
            margin-right: 2px;
            vertical-align: top;
            height: 36px;
            line-height: 36px;
            position: relative;
        }





        

        .btnloadPricebyCapcity.selected {
            border-color: #fb6e2e;
            color: red;
        }
    </style>
    <script>
        $(document).ready(function () {
            // Xác định hàm để chọn nút đầu tiên và gọi hàm loadPriceForByCapcityColor
            function selectFirstButtonAndLoadPrice() {
                // Lấy nút màu sắc đầu tiên
                var firstButton = $('.btnloadPricebyCapcity').first();

                // Nếu không có nút màu sắc nào tồn tại, không làm gì cả
                if (firstButton.length === 0) return;

                // Lấy ID của sản phẩm chi tiết từ thuộc tính data của nút đầu tiên
                var productDetailId = firstButton.data('id');

                // Gắn lớp 'selected' và gọi hàm loadPriceForByCapcityColor với ProductDetailId của nút đầu tiên
                firstButton.addClass('selected');
                loadPriceForByCapcityColor(productDetailId);
            }

            // Xử lý sự kiện khi người dùng nhấp vào nút màu sắc
            $('.btnloadPricebyCapcity').on('click', function () {
                // Loại bỏ lớp 'selected' từ tất cả các nút màu sắc
                $('.btnloadPricebyCapcity').removeClass('selected');

                // Gắn lớp 'selected' vào nút được nhấp
                $(this).addClass('selected');

                // Lấy ID của sản phẩm chi tiết từ thuộc tính data của nút được nhấp
                var productDetailId = $(this).data('id');

                // Gọi hàm loadPriceForByCapcityColor với ProductDetailId của nút được nhấp
                loadPriceForByCapcityColor(productDetailId);
            });

            // Gọi hàm chọn nút đầu tiên và gọi hàm loadPriceForByCapcityColor khi trang được tải
            selectFirstButtonAndLoadPrice();
        });

    </script>







