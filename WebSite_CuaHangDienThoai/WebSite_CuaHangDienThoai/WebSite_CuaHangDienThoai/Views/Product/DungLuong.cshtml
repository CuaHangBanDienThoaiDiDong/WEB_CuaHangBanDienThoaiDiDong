

@model List<WebSite_CuaHangDienThoai.Models.ProductDetailViewModel>

<style>
    .capacity-list {
        display: flex;
        flex-wrap: wrap;
        list-style: none;
        padding: 0;
        margin: -5px;
    }

        .capacity-list li {
            /*flex: 0 0 calc(30% - 10px);*/ /* Sử dụng calc để tính toán chiều rộng với khoảng trống và margin */
            margin: 5px; /* Tạo khoảng cách giữa các mục */
            padding: 10px;
            text-align: center;
            box-sizing: border-box;
        }

            .capacity-list li a {
                border: solid 1px gray;
                border-radius: 10px;
                width: auto;
                height: auto;
                padding: 10px;
                background: #2f3033;
                color: white
            }

    .capacity span {
        display: block;
        overflow: hidden;
        color: #fff;
        font-size: 15px;
        line-height: 20px;
        margin: 0 0 10px;
    }

    .color-sp span {
        display: block;
        overflow: hidden;
        color: #fff;
        font-size: 15px;
        line-height: 20px;
        margin: 0 0 10px;
    }






    .scrolling_inner {
        position: relative;
    }

    .box03 {
        margin-bottom: 10px;
    }

    .box03__item.act {
        border-color: #2f80ed;
        color: white;
    }

    .box03__item {
        border: 1px solid #e0e0e0;
        border-radius: 2px;
        color: white;
        display: inline-block;
        font-size: 13px;
        min-width: 67px;
        padding: 0 15px;
        text-align: center;
        margin-bottom: 5px;
        margin-right: 2px;
        vertical-align: top;
        height: 36px;
        line-height: 36px;
        position: relative;
    }
</style>


