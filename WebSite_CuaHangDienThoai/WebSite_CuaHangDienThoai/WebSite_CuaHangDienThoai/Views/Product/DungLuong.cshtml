<div class="capacity">
    <span>Dung lượng</span>
    <div class="scrolling_inner">
        <div class="box03 color group desk">
            @foreach (var item in Model)
            {
                var DungLuong = "";
                if (item.DungLuong > 999)
                {
                    DungLuong = "1Tb";
                }
                else if (item.DungLuong > 1999)
                {
                    DungLuong = "2 Tb";
                }
                else
