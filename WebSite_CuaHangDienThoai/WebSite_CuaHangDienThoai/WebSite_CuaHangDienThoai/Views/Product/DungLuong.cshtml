                    DungLuong = item.DungLuong + " Gb";
                }
                <a href="/Productdetail/ProductDetailByCapacity?productsId=@ViewBag.ProductsId&Capacity=@item.DungLuong" data-color="1197" data-code="0131491003841" class="box03__item item  ">@DungLuong</a>



            }

        </div>
    </div>

</div>






