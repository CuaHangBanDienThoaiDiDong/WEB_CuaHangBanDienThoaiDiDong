@model IEnumerable<WebSite_CuaHangDienThoai.Models.tb_ProductCategory>
@if (ViewBag.txt == null)
{
    <div class="row">
        <div class="col text-center">
            <div class="section_title new_arrivals_title">
                <h2 style="color:white">GỢI Ý HÔM NAY</h2>
            </div>
        </div>
    </div>
    <div class="row align-items-center">
        <div class="col text-center">
            <div class="new_arrivals_sorting">
                <ul class="arrivals_grid_sorting clearfix button-group filters-button-group justify-content-center align-items-center d-flex flex-wrap">
                    <li class="grid_sorting_button button d-flex flex-column justify-content-center align-items-center active is-checked m-4 " data-filter="*">Cho bạn</li>
                    @foreach (var item in Model)
                    {
                        if (item.IsActive == true)
                        {
                            <li class="grid_sorting_button button d-flex flex-column justify-content-center align-items-center m-4  " data-filter=".@item.Alias">@item.Title</li>
                        }
                       
                    }
                </ul>
            </div>
        </div>
    </div>
    <div class="row  "> 
        <div class="col  align-items-center d-flex flex-column">
            <div class="product-grid align-items-center d-flex flex-column" data-isotope='{ "itemSelector": ".product-item", "layoutMode": "fitRows" }'>
                @Html.Action("Partial_ItemsByCateId", "Product")
            </div>
        </div>
    </div>
}
else
{
    <p class="text-danger">@ViewBag.txt</p>
}








