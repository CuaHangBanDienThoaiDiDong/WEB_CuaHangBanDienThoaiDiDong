    #product-list {
        display: flex;
        flex-wrap: wrap;
        margin: -10px; /* Đảm bảo không có khoảng trống giữa các sản phẩm */
    }

    #product {
        flex: 0 0 calc(33.33% - 20px); /* 33.33% chiều rộng, trừ đi khoảng cách giữa các sản phẩm */
        margin: 10px; /* Tạo khoảng cách giữa các sản phẩm */
        box-sizing: border-box; /* Đảm bảo padding và border không làm thay đổi kích thước ngoài cùng của sản phẩm */
        background: #323232;
        border-radius: 10px;
        padding: 20px;
        margin: 10px;
        position: relative; /* Đặt vị trí tương đối để áp dụng box-shadow */
        transition: box-shadow 0.3s ease; /* Hiệu ứng chuyển đổi box-shadow */
    }

        #product:hover {
            box-shadow: -5px -5px 10px rgba(255, 255, 255, 0.5), 5px 5px 10px rgba(0, 0, 0, 0.5); /* Sử dụng box-shadow để tạo hiệu ứng ánh sáng ở top và left, và bóng đen ở bottom và right khi hover */
        }

        #product img {
            width: 70%;
            height: auto;
            transition: transform 0.3s ease; /* Hiệu ứng chuyển đổi ảnh khi hover */
        }

        #product:hover img {
            transform: translateY(-20px); /* Hiệu ứng dịch chuyển ảnh lên trên khi hover */
        }

        #product h5 {
            color: #fff; /* Màu văn bản */
            transition: color 0.3s ease; /* Hiệu ứng chuyển đổi màu văn bản */
        }

        #product:hover h5 {
            color: red; /* Thay đổi màu văn bản khi hover */
        }


</style>





