<script>
    // Kích hoạt tabs khi nhấp vào chúng
    document.querySelectorAll('[data-mdb-tab-init]').forEach(function (tab) {
        tab.addEventListener('click', function (event) {
            event.preventDefault(); // Ngăn chặn hành vi mặc định của thẻ 'a'
            var tabId = this.getAttribute('href'); // Lấy id của tab
            document.querySelector(tabId).classList.add('show', 'active'); // Thêm lớp 'show' và 'active' vào tab content
            document.querySelector(tabId).setAttribute('aria-selected', 'true'); // Đặt thuộc tính aria-selected của tab content thành true
            this.parentElement.parentElement.querySelectorAll('.nav-link').forEach(function (link) {
                // Xóa lớp 'show' và 'active' khỏi tất cả các tab khác
                if (link.getAttribute('href') !== tabId) {
                    var contentId = link.getAttribute('href');
                    document.querySelector(contentId).classList.remove('show', 'active');
                    document.querySelector(contentId).setAttribute('aria-selected', 'false');
                }
            });
        });
    });

</script>