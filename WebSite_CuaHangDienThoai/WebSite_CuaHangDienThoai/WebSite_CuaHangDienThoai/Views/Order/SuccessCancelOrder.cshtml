@model WebSite_CuaHangDienThoai.Models.tb_Order
@{
    ViewBag.Title = "Huỷ đơn hàng ";
    Layout = "~/Views/Shared/_LayoutPage.cshtml";
}

<link rel="stylesheet" type="text/css" href="~/Content/assets/styles/categories_styles.css">
<link rel="stylesheet" type="text/css" href="~/Content/assets/styles/categories_responsive.css">
<br />
<br />
<br />
<br />
<div class="container ">

    <div class="row">
        <div class="col-12" style="background-color:aquamarine">
            <svg xmlns="http://www.w3.org/2000/svg" width="50" height="50" fill="currentColor" class="bi bi-check2-circle" viewBox="0 0 16 16">
                <path d="M2.5 8a5.5 5.5 0 0 1 8.25-4.764.5.5 0 0 0 .5-.866A6.5 6.5 0 1 0 14.5 8a.5.5 0 0 0-1 0 5.5 5.5 0 1 1-11 0" />
                <path d="M15.354 3.354a.5.5 0 0 0-.708-.708L8 9.293 5.354 6.646a.5.5 0 1 0-.708.708l3 3a.5.5 0 0 0 .708 0z" />
            </svg>
        </div>
    </div>

    <div class="row">




        <div class="col product_section clearfix">

            <!-- Breadcrumbs -->

            <div class="breadcrumbs d-flex flex-row align-items-center">
                <ul>
                    <li><a href="/Trang-chu" class="text-white">Trang chủ</a></li>
                    <li class="active"><a href="/Gio-hang"><i class="fa fa-angle-right" aria-hidden="true"></i>Giỏ hàng</a></li>
                    <li class="active"><a href="#"><i class="fa fa-angle-right" aria-hidden="true"></i>Hủy đơn hàng</a></li>
                </ul>
            </div>

            <div class="card">
                <div class="card-body">
                    <div class="=row" style="width: 100%;">
                        <div class="col-12" style="background-color: aquamarine; display: flex; justify-content: center; align-items: center; height: 20vh; width: 100%;">
                            <svg xmlns="http://www.w3.org/2000/svg" width="150" height="150" style="color:white;" fill="currentColor" class="bi bi-check2-circle" viewBox="0 0 16 16">
                                <path d="M2.5 8a5.5 5.5 0 0 1 8.25-4.764.5.5 0 0 0 .5-.866A6.5 6.5 0 1 0 14.5 8a.5.5 0 0 0-1 0 5.5 5.5 0 1 1-11 0" />
                                <path d="M15.354 3.354a.5.5 0 0 0-.708-.708L8 9.293 5.354 6.646a.5.5 0 1 0-.708.708l3 3a.5.5 0 0 0 .708 0z" />
                            </svg>
                        </div>
                    </div>



                    <div class="row pt-2" style="width: 100%;">
                        <div class="col-md-12" style="display: flex; justify-content: center; align-items: center; " id="load_data">
                            <h2>Bạn đã hủy đơn hàng thành công</h2>
                            <br />



                        </div>
                        <div class="col-md-12" style="display: flex; justify-content: center; align-items: center; " id="load_data">


                            @*<h5>Theo dõi đơn hàng      <a href="" class="text-danger">Tại đây</a></h5>*@


                        </div>
                    </div>
                    <div class="row pt-2" style="width: 100%;">

                        <div class="col-md-12" style="display: flex; justify-content: center; align-items: center; " id="load_data">



                            <h5>Tiếp tục mua hàng <a href="/san-pham">Cửa hàng</a></h5>

                        </div>
                    </div>
                </div>
            </div>




        </div>
    </div>


    <div class="row">
        @if (Model != null)
        {

            var checkOutWareHouse = Model.tb_ExportWareHouse.FirstOrDefault(x => x.OrderId == Model.OrderId);
            <div class="container bootstrap snippets bootdey mt-5 panel panel-info panel-shadow">
                <div class="col-md-12 col-sm-8 content">
                    <div class="row">
                        <div class="col-md-12">
                            <ol class="breadcrumb">
                                <li><a href="#" class="text-black">Đơn hàng </a><span style="color:orangered"> @Model.Code </span>| Ngày đặt <span class="text-danger">@Model.CreatedDate.ToString("dd/MM/yyyy") </span> </li>


                            </ol>
                            <hr class="col-3" />
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-md-12">
                            <div class="">
                                <div class="panel-heading">

                                    @Html.Action("Partail_TrangThaiDonHang", "Order", new { id = Model.OrderId })
                                </div>
                                <div class="panel-body">
                                    <div class="table-responsive">
                                        <table class="table">
                                            <thead>
                                                <tr>
                                                    <th>Sản phẩm </th>
                                                    <th>Màu</th>
                                                    <th>Dung lượng</th>
                                                    <th>Số lượng</th>
                                                    <th>Giá</th>
                                                    <th>Tổng tiền</th>
                                                </tr>
                                            </thead>
                                            <tbody>
                                                @Html.Action("Partail_Ordertail", "Order", new { id = Model.OrderId })




                                                <tr>
                                                    <td colspan="4" class="text-right"><strong class="text-danger">Tổng tiền</strong></td>
                                                    <td class="text-danger">@WebSite_CuaHangDienThoai.Common.Common.FormatNumber(Model.TotalAmount) đ</td>
                                                </tr>
                                            </tbody>
                                        </table>
                                    </div>
                                </div>

                            </div>
                        </div>
                    </div>
                    <div class="col-md-12">
                        <div class="row">


                        </div>

                    </div>
                </div>
            </div>



        }
        else
        {


        }


    </div>
</div>


