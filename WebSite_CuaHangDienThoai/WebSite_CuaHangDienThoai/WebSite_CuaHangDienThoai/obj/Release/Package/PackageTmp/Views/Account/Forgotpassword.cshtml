<!-- Password Reset 8 - Bootstrap Brain Component -->
<section class=" p-3 p-md-4 p-xl-5">
    <div class="container">
        <div class="row justify-content-center">
            <div class="col-12 col-xxl-11">
                <div class="card border-light-subtle shadow-sm">
                    <div class="row g-0">
                        <div class="col-12 col-md-6">
                            <img class="img-fluid rounded-start w-100 h-100 object-fit-cover" loading="lazy" src="./assets/img/logo-img-1.webp" alt="Welcome back you've been missed!">
                        </div>
                        <div class="col-12 col-md-6 d-flex align-items-center justify-content-center">
                            <div class="col-12 col-lg-11 col-xl-10">
                                <div class="card-body p-3 p-md-4 p-xl-5">
                                    <div class="row">
                                        <div class="col-12">
                                            <div class="mb-5">
                                                <div class="text-center mb-4">
                                                    <a href="#!">
                                                        <img src="./assets/img/bsb-logo.svg" alt="BootstrapBrain Logo" width="175" height="57">
                                                    </a>
                                                </div>
                                                <h2 class="h4 text-center">Khôi phục mật khẩu</h2>
                                                <h3 class="fs-6 fw-normal text-secondary text-center m-0">
                                                    Cung cấp địa chỉ email được liên kết với tài khoản của bạn để khôi phục mật khẩu.
                                                </h3>
                                            </div>
                                        </div>
                                    </div>
                                   
                                        <div class="row gy-3 overflow-hidden">
                                            @using (Html.BeginForm("Forgot", "Account", FormMethod.Post))
                                            {
                                                <div class="col-12">
                                                    <div class="form-floating mb-3">

                                                     
                                                        @Html.TextBox("Email", "", new { @class = "form-control ", placeholder = "abc@gmail.com" })
                                                        <label for="email" class="form-label">Email</label>
                                                    </div>
                                                </div>
                                                <div class="col-12">
                                                    <div class="d-grid">
                                                        <button class="btn btn-lg btn-primary btn-block" value="Search" type="submit">Gửi Code</button>
                                                    </div>
                                                </div>
                                            }

                                        </div>
                                   
                                    <div class="row">
                                        <div class="col-12">
                                            <div class="d-flex gap-2 gap-md-4 flex-column flex-md-row justify-content-md-center mt-5">
                                                <a href="/Account/Login" class="link-secondary text-decoration-none">Đăng nhập</a>
                                                <a href="/Account/Register" class="link-secondary text-decoration-none">Đăng ký</a>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>

