@model IEnumerable<WebSite_CuaHangDienThoai.Models.tb_ExportWareHouse>
@{
    ViewBag.Title = "Đơn hàng xuất ngày " + ViewBag.Today;
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

@section naviheader{
    <!-- Left navbar links -->
    <ul class="navbar-nav">
        <li class="nav-item">
            <a class="nav-link" data-widget="pushmenu" href="#" role="button"><i class="fas fa-bars"></i></a>
        </li>
        <li class="nav-item d-none d-sm-inline-block">
            <a href="/admin/Homepage/" class="nav-link">Trang chủ</a>
        </li>
        <li class="nav-item d-none d-sm-inline-block">
            <a href="/admin/productcategory" class="nav-link">@ViewBag.Title</a>
        </li>
    </ul>
}
<!-- Content Header (Page header) -->
<section class="content-header">
    <div class="container-fluid">
        <div class="row mb-2">
            <div class="col-sm-6">
                <h1>Quản lý đơn hàng xuất</h1>
            </div>
            <div class="col-sm-6">
                <ol class="breadcrumb float-sm-right">
                    <li class="breadcrumb-item"><a href="/admin/Homepage/">Trang chủ</a></li>
                    <li class="breadcrumb-item active">@ViewBag.Title</li>
                </ol>
            </div>
        </div>
    </div>
</section>


<section class="content">
    <div class="card mb-4">
        <div class="card-header">Đơn hàng xuất ngày @ViewBag.Today</div>
        <div class="card-body p-0">
            <div class="table-responsive table-billing-history">
                <table class="table mb-0">
                    <thead>
                        <tr>
                            <th><input type="checkbox" id="SelectAll" /></th>
                            <th>STT</th>
                            <th class="text-center">Mã đơn hàng</th>
                            <th class="text-center">Ngày xuất</th>
                            <th class="text-center">Tên kho</th>
                            <th class="text-center">Nhân Viên</th>


                            <th style="width:150px;"></th>
                        </tr>
                    </thead>
                    <tbody>
                        @if (Model != null && Model.Any())
                        {
                            var i = 1;

                            foreach (var item in Model)
                            {

                                <tr id="trow_@item.ExportWareHouseId">
                                    <td><input type="checkbox" class="cbkItem" value="@item.ExportWareHouseId" /></td>
                                    <td class="text-center">@i</td>
                                    @*<td class="text-center">@Html.Action("Partail_CheckCode", "WareHouse", new { id = item.OrderId })   </td>
                                    <td class="text-center">@item.CreatedDate.ToString("dd/MM/yyyy")</td>
                                    <td class="text-center">@Html.Action("Partail_WareHouseById", "WareHouse", new { id = item.Idkho })</td>
                                    <td class="text-center">@Html.Action("Partail_StaffById", "WareHouse", new { MSNV = item.MSNV })</td>*@
                                </tr>
                                i++;
                            }
                        }
                        else
                        {
                            <tr>
                                <td colspan="4">Không có bản ghi nào!!!</td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
        </div>
</section>


