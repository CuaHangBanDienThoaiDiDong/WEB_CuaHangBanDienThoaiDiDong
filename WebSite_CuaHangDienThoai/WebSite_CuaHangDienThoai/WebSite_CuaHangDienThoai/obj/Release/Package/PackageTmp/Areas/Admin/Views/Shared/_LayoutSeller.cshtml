            <div class="user-panel mt-3 pb-3 mb-3 d-flex align-items-center">
                <div class="image">
                    @if (Session["userimg"] != null)
                    {
                        var imgBase64 = Session["userimg"] as string;
                        if (!string.IsNullOrEmpty(imgBase64))
                        {
                            <img src="data:image;base64,@imgBase64" class="img-fluid img-circle" alt="Avatar">
                        }

                    }
                    else
                    {
                        <img src="~/images/Logo/LogoWebpng.png" class="img-fluid img-circle" style="width:70px;height:60px;" alt="LogoWebpng">
                    }
                </div>
                <div class="info">
                    @if (Session["user"] != null)
                    {
                        var user = Session["user"] as WebSite_CuaHangDienThoai.Models.tb_Staff;
                        if (user != null)
                        {
                            <div>
                                <span class="text-white">@user.NameStaff</span>
                                <br />
                                <span class="text-white">@user.tb_Function.TitLe</span>
                            </div>
                        }
                        else
                        {
                            <span class="text-white">Unknown User</span>
                        }
                    }
                    else
                    {
                        @Html.ActionLink("DangNhap", "Account", null, new { @class = "text-white" })
                    }
                </div>
