    <script>
        $('body').on('click', '.btnClockStaff', function () {
            var id = $(this).data("id");
            var btn = $(this);

            Swal.fire({
                title: "Bạn có muốn khóa tài khoản này?",
                text: "Bạn đang thao tác!",
                icon: "warning",
                showCancelButton: true,
                confirmButtonColor: "#3085d6",
                cancelButtonColor: "#d33",
                confirmButtonText: "Chắc chắc khóa!"
            }).then((result) => {
                if (result.isConfirmed) {
                    $.ajax({
                        url: '/Admin/Staff/IsLock',
                        type: 'POST',
                        data: { id: id },
                        success: function (rs) {
                            if (rs.success) {
                                if (rs.isAcive) {
                                    Swal.fire({
                                        title: "Khóa thành công!",
                                        text: "Tài khoản không thể đăng nhập.",
                                        icon: "success"
                                    });
                                    setTimeout(function () {
                                        location.reload(true);
                                        btn.html("<i class=\"fas fa-lock text-danger\"></i>");
                                    }, 1000);
                                
                                } else {

                                    Swal.fire({
                                        title: "Mở khóa thành công!",
                                        text: "Tài khoản có thể đăng nhập.",
                                        icon: "success"
                                    });
                                    setTimeout(function () {
                                        location.reload(true);
                                        btn.html("<i class=\"fas fa-lock-open\"></i>");
                                    }, 1000);

                                   
                                }
                            }
                        }
                    });
                    
                }
            });
            
        });

        $('body').on('click', '.btnKhoiPhucMatKhau', function () {
            var id = $(this).data("id");
            var btn = $(this);
            Swal.fire({
                title: "Khôi phục mật khẩu ?",
                text: "Bạn đang thao tác!",
                icon: "warning",
                showCancelButton: true,
                confirmButtonColor: "#3085d6",
                cancelButtonColor: "#d33",
                confirmButtonText: "Đồng ý !"
            }).then((result) => {
                if (result.isConfirmed) {
                    $.ajax({
                        url: '/Admin/Staff/KhoiPhucMatKhau',
                        type: 'POST',
                        data: { id: id },
                        success: function (rs) {
                            if (rs.success) {
                                if (rs.code==1) {

                                    Swal.fire({
                                        title: "Khôi phục thành công!",
                                        text: "Có thể đăng nhập bằng mật khẩu mới.",
                                        icon: "success"
                                    });
                                    setTimeout(function () {
                                        location.reload(true);
                                      
                                    }, 1000);
                                   
                                } else {





                                    setTimeout(function () {
                                        location.reload(true);
                                        btn.html("<i class=\"fas fa-lock-open\"></i>");
                                    }, 2000); //
                                  
                                }
                            }
                        }
                    });
                
                }
            });
            //var conf = confirm('Bạn có muốn khóa tài khoản nhân viên này');
            //if (conf == true) {
                
