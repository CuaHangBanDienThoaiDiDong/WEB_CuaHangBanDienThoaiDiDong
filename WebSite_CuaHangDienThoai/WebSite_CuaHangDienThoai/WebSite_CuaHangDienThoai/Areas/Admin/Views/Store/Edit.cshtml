@model WebSite_CuaHangDienThoai.Models.tb_Store 
@{
    ViewBag.Title = "Chỉnh sửa cửa hàng";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}


@section naviheader{
    <!-- Left navbar links -->
    <ul class="navbar-nav">
        <li class="nav-item">
            <a class="nav-link" data-widget="pushmenu" href="#" role="button"><i class="fas fa-bars"></i></a>
        </li>
        <li class="nav-item d-none d-sm-inline-block">
            <a href="/admin" class="nav-link">Trang chủ</a>
        </li>
        <li class="nav-item d-none d-sm-inline-block">
            <a href="/admin/products" class="nav-link">Cửa hàng</a>
        </li>
        <li class="nav-item d-none d-sm-inline-block">
            <a href="#" class="nav-link">Cập nhật</a>
        </li>
    </ul>
}


<!-- Content Header (Page header) -->
<section class="content-header">
    <div class="container-fluid">
        <div class="row mb-2">
            <div class="col-sm-6">
                <h1>Cập nhật Cửa hàng</h1>
            </div>
            <div class="col-sm-6">
                <ol class="breadcrumb float-sm-right">
                    <li class="breadcrumb-item"><a href="#">Cửa hàng</a></li>
                    <li class="breadcrumb-item active">Cập nhật</li>
                </ol>
            </div>
        </div>
    </div><!-- /.container-fluid -->
</section>


<!-- Main content -->
<section class="content">

    <!-- Default box -->
    <div class="card">
        <div class="card-header">
            <h3 class="card-title">Thông tin Cửa hàng</h3>
        </div>
        <div class="card-body">
            <div class="row">
                <div class="col-md-12">
                    @using (Html.BeginForm("Edit", "Store", FormMethod.Post, new { }))
                    {
                        @Html.AntiForgeryToken()
                        @Html.ValidationSummary(true)
                        @Html.HiddenFor(x => x.StoreId)
                        @Html.HiddenFor(x => x.CreatedDate)
                        <div class="card">
                            <div class="card-header p-2">
                                <ul class="nav nav-pills">
                                    <li class="nav-item"><a class="nav-link active" href="#activity" data-toggle="tab">Thông tin chung</a></li>
                                </ul>
                            </div><!-- /.card-header -->
                            <div class="card-body">
                                @if (TempData["SuccessMessage"] != null)
                                {
                                    <div class="alert alert-success">
                                        <button type="button" class="close" data-dismiss="alert" aria-hidden="true">×</button>
                                        @TempData["SuccessMessage"]
                                    </div>
                                }
                                <div class="tab-content">
                                    <div class="active tab-pane" id="activity">
                                        <div class="form-group">
                                            <label for="exampleInputEmail1">Địa chỉ cửa hàng</label>
                                            @Html.TextBoxFor(x => x.Location, new { @class = "form-control", @placeholder = "Địa chỉ cửa hàng" })
                                            @Html.ValidationMessageFor(x => x.Location, null, new { @class = "text-danger" })
                                        </div>

                                        <div class="form-group">
                                            <div class="row">
                                                <div class="col-4">
                                                    <label for="ddlProvinces">Danh mục Tỉnh/Thành phố</label>
                                                    @Html.DropDownListFor(x => x.idProvinces, ViewBag.Provinces as SelectList, "-Chọn danh mục Tỉnh/Thành phố-", new { @class = "form-control", @id = "ddlProvinces" })

                                                    @Html.ValidationMessageFor(x => x.idProvinces, null, new { @class = "text-danger" })
                                                </div>
                                                <div class="col-4">
                                                    <label for="ddlDistricts">Danh mục Quận/Huyện</label>
                                                    @Html.DropDownListFor(x => x.idDistricts, ViewBag.Districts as SelectList, "-Chọn danh mục Quận/Huyện-", new { @class = "form-control", @id = "ddlDistricts" })
                                                    @Html.ValidationMessageFor(x => x.idDistricts, null, new { @class = "text-danger" })
                                                </div>
                                                <div class="col-4">
                                                    <label for="ddlWards">Danh mục Phường/Xã</label>
                                                    @Html.DropDownListFor(x => x.idWards, ViewBag.Wards as SelectList, "-Chọn danh mục Phường/Xã-", new { @class = "form-control", @id = "ddlWards" })
                                                    @Html.ValidationMessageFor(x => x.idWards, null, new { @class = "text-danger" })
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                                <!-- /.tab-content -->
                            </div><!-- /.card-body -->
                            <div class="form-group">
                                <button type="submit" class="btn btn-success">Lưu Lại</button>
                                <a href="/admin/store" class="btn btn-danger">Quay lại</a>
                            </div>
                        </div> <!-- /.card -->
                    }
                </div>
            </div>
        </div>
        <!-- /.card-body -->
        <div class="card-footer">

        </div>
        <!-- /.card-footer-->
    </div>
    <!-- /.card -->

</section>



@section  scripts{
    <script>
        $(document).ready(function () {
            // Xử lý khi thay đổi tỉnh/thành phố
            $("#ddlProvinces").change(function () {
                var idProvinces = $(this).val();
                $.getJSON('/admin/ProvincesVN/GetDistrictsByProvince', { idProvinces: idProvinces }, function (districts) {
                    var items = '<option value="">-Chọn danh mục Quận/Huyện-</option>';
                    $.each(districts, function (i, district) {
                        items += "<option value='" + district.idDistricts + "'>" + district.name + "</option>";
                    });
                    $("#ddlDistricts").html(items); // Cập nhật DropDownList chứa danh sách quận/huyện
                    $("#ddlWards").html('<option value="">-Chọn danh mục Phường/Xã-</option>'); // Xóa các phường/xã khi thay đổi tỉnh/thành phố
                });
            });

            // Xử lý khi thay đổi quận/huyện
            $("#ddlDistricts").change(function () {
                var idDistricts = $(this).val();
                $.getJSON('/admin/ProvincesVN/GetWardsByDistrict', { idDistricts: idDistricts }, function (wards) {
                    var items = '<option value="">-Chọn danh mục Phường/Xã-</option>';
                    $.each(wards, function (i, ward) {
                        items += "<option value='" + ward.idWards + "'>" + ward.name + "</option>";
                    });
                    $("#ddlWards").html(items); // Cập nhật DropDownList chứa danh sách phường/xã
                });
            });
        });





    </script>
}