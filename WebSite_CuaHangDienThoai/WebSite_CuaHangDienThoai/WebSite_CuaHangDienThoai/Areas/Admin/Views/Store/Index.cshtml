@model PagedList.PagedList<WebSite_CuaHangDienThoai.Models.tb_Store>
@using PagedList.Mvc;
@{
    ViewBag.Title = "Quản lý cửa hàng";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}


