

@model List<WebSite_CuaHangDienThoai.Models.ProductDetailViewModel>

<style>
    #btnDungLuong {
        border: solid 2px gray;
    }
</style>

@if (ViewBag.ProductsId != null)
{

    if (Model != null)
    {

        <div class="row">
            <div class="col-1">

            </div>
            <div class="col-10 ">
                @{
                    var firstDungLuong = Model.FirstOrDefault()?.DungLuong; // Lấy giá trị dung lượng đầu tiên
                }
                @foreach (var item in Model)
                {

                    var uniqueColors = item.Color.Distinct();
                    var DungLuong = item.DungLuong > 1999 ? "2 TB" :
                                    item.DungLuong > 999 ? "1 TB" :
                                    item.DungLuong + " GB";

                    <p>@DungLuong</p>
                    <hr />
                }



            </div>
            <div class="col-1">

            </div>

        </div>

    }

    else
    {
        <p class="text-danger">Không tồn tại bảng ghi nào !!</p>
    }
}
else
{
    <p class="text-danger">Không tồn tại bảng ghi nào !!</p>
}
