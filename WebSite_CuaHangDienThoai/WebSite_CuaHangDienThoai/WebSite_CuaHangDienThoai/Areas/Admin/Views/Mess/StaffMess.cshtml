@model IEnumerable<WebSite_CuaHangDienThoai.Models.tb_Message>
@{
    ViewBag.Title = "Hỗ trợ phản hồi ";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutSeller.cshtml";
}


<link href="~/Content/Css/Addmin/Mess.css" rel="stylesheet" />
<link href="~/Content/Loading.css" rel="stylesheet" />
@section naviheader{
    <!-- Left navbar links -->
    <ul class="navbar-nav">
        <li class="nav-item">
            <a class="nav-link" data-widget="pushmenu" href="#" role="button"><i class="fas fa-bars"></i></a>
        </li>
        <li class="nav-item d-none d-sm-inline-block">
            <a href="/Admin/Seller" class="nav-link">Bán hàng</a>
        </li>
        <li class="nav-item d-none d-sm-inline-block">
            <a href="/Admin/Mess/StaffMess" class="nav-link">@ViewBag.Title</a>
        </li>
    </ul>
