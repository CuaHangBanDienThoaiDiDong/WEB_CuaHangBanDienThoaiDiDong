<script src="https://code.jquery.com/ui/1.13.1/jquery-ui.js"></script>
<script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
<script>
    var originalContent;

    $(document).ready(function () {
        originalContent = $('#loadDataSuggestWareHouseImport').html();
        LoadIndex(1);

        $(document).on('click', '.pagination a', function (e) {
            e.preventDefault();
            var page = $(this).attr('data-page');
            LoadIndex(page);
        });

        $('#clearInputWareHouseImport').click(function () {
            $("#searchWareHouseImport").val(""); // Xóa nội dung trong ô tìm kiếm
            resetToOriginalContent(); // Đặt lại nội dung ban đầu
        });

        $('#searchWareHouseImport').on('input', function () {
            var keyword = $(this).val().trim();
            if (keyword.length > 0) {
                // Gọi action SuggestWareHouseImportCustomer với keyword
                $.ajax({
                    url: '/Admin/WareHouseImport/SuggestWareHouseImportCustomer',
                    type: 'GET',
                    data: { search: keyword },
                    success: function (response) {
                        $('#loadDataSuggestWareHouseImport').html(response);
                    },
                    error: function () {
                        // Xử lý lỗi nếu có
                        console.log('Đã xảy ra lỗi khi tải dữ liệu.');
                    }
                });
            } else {
                resetToOriginalContent(); // Đặt lại nội dung ban đầu nếu không có keyword
            }
        });

        if (typeof $ === 'undefined') {
            console.error('jQuery is not loaded');
            return;
        }

        // Select elements using jQuery
        var bg = $(".bg-sg");
        var popup = $("#popupWareHouseImport");

        var btnCapNhatWareHouseImport = $('.btnCapNhatWareHouseImport');

        btnCapNhatWareHouseImport.each(function () {
            $(this).on('click', function (e) {
                e.preventDefault();

                bg.show();
                popup.show();

                var id = $(this).data('id');
                if (id != null) {
                    $.ajax({
                        url: '/admin/WareHouseImport/Edit',
                        type: 'GET',
                        data: { id: id },
                        success: function (response) {
                            $("#loadDataSellerEdit").html(response);
                        },
                        error: function (xhr, status, error) {
                            console.error(xhr.responseText);
                        }
                    });
                }
            });
        });

        bg.on('click', function () {
            bg.hide();
            popup.hide();
        });

        $('.btnCloseEditWareHouseImport').on('click', function () {
            bg.hide();
            popup.hide();
        });
    });

    function getOrderNewToDay() {
        var ngayxuat = $('#ngayxuatWareHouseImport').val(); // Sử dụng jQuery để lấy giá trị của input datetime-local
        $.ajax({
            url: '/Admin/WareHouseImport/WareHouseImportExportToday', // Địa chỉ URL của action trong controller
            type: 'GET',
            data: { ngayxuat: ngayxuat },
            success: function (data) {
                $('#loadDataSuggestWareHouseImportloadDataSuggestWareHouseImport').html(data);
            },
            error: function (xhr, status, error) {
                console.log('Đã xảy ra lỗi khi gửi yêu cầu:', error);
            }
        });
    }

    function resetToOriginalContent() {
        $('#loadDataSuggestWareHouseImport').html(originalContent);
    }
</script>