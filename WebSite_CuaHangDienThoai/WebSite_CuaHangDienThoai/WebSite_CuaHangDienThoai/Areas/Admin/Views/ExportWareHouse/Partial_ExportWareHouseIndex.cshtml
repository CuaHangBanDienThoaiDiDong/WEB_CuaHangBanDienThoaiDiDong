@* Script cho tab "Tất cả đơn hàng" *@
<script>
    function LoadOrderAll(page) {
        $.ajax({
            url: '/Admin/Order/Partial_OrderIndex',
            type: 'GET',
            data: { page: page },
            success: function (rs) {
                $('#loaddataOrderIndex').html(rs);
            },
            error: function (error) {
                console.log(error);
            }
        });
    }

    $(document).ready(function () {
        originalContent = $('#loaddataOrderIndex').html();
        LoadOrderAll(1);

        $(document).on('click', '.pagination a', function (e) {
            e.preventDefault();
            var page = $(this).attr('data-page');
            LoadOrderAll(page);
        });
    });
</script>

