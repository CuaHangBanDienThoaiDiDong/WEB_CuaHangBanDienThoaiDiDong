
@{
    ViewBag.Title = "Kho xuất";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutWareHouse.cshtml";
}


@section naviheader{
    <!-- Left navbar links -->
    <ul class="navbar-nav">
        <li class="nav-item">
            <a class="nav-link" data-widget="pushmenu" href="#" role="button"><i class="fas fa-bars"></i></a>
        </li>
        <li class="nav-item d-none d-sm-inline-block">
            <a href="/admin" class="nav-link">Trang chủ</a>
        </li>
        <li class="nav-item d-none d-sm-inline-block">
            <a href="/admin/productdetail/index" class="nav-link">@ViewBag.Title</a>
        </li>
    </ul>
}
<link rel="stylesheet" href="//code.jquery.com/ui/1.13.1/themes/base/jquery-ui.css">
<!-- Content Header (Page header) -->
<section class="content-header">
    <div class="container-fluid">
        <div class="row mb-2">
            <div class="col-sm-6">
                <h1>Quản lý dòng sản phẩm</h1>
            </div>
            <div class="col-sm-6">
                <ol class="breadcrumb float-sm-right">
                    <li class="breadcrumb-item"><a href="#">Home</a></li>
                    <li class="breadcrumb-item active">@ViewBag.Title</li>
                </ol>
            </div>
        </div>
    </div><!-- /.container-fluid -->
</section>


<section class="content">

    <div class="card bootstrap snippets bootdey mt-5 panel panel-info panel-shadow">
        <div class="card-body">
            <h2 class="mt-4">Thêm mới phiếu xuất kho</h2>
            <div class="row">
                <div class="col-6">

                    @*@Html.Action("Partial_ThongTinXuat", "ExportWareHouse")*@
                    <div class="form-group col-md-12" style="display: flex; align-items: center;">

                        <label for="phieuXuat" style="margin-right: 10px;">Mã đơn hàng:</label>
                        <input type="text" class="form-control" id="maDonHang" placeholder="Mã đơn hàng ">
                        <button>Tìm</button>
                    </div>
                </div>
                <div class="col-6">
                    <div class="dropdown show">
                        <a class="btn btn-secondary dropdown-toggle" href="#" role="button" id="dropdownMenuLink" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                            Dropdown link
                        </a>

                        <div class="dropdown-menu" aria-labelledby="dropdownMenuLink">
                            <a class="dropdown-item" href="#">Action</a>
                            <a class="dropdown-item" href="#">Another action</a>
                            <a class="dropdown-item" href="#">Something else here</a>
                        </div>
                    </div>
                </div>
            </div>


            <hr />


            <div class="card">
                <div class="loadOrder">

                </div>

            </div>


        </div>

    </div>

</section>
@section scripts{
    <script src="https://code.jquery.com/ui/1.13.1/jquery-ui.js"></script>
    <script>
        $(document).ready(function () {
            $('#maDonHang').on('input', function () {
                var code = $(this).val();
                if (code.trim() !== '') {

                    $.ajax({
                        url: '/WareHouse/ExportWareHouse/Partial_ThongTinDonHang', // Thay TênController bằng tên thực tế của controller
                        type: 'GET',
                        data: { code: code },
                        success: function (data) {
                            // Hiển thị kết quả từ controller trong một phần tử HTML
                            $('.loadOrder').html(data);
                        },
                        error: function (xhr, status, error) {
                            // Xử lý lỗi nếu có
                            console.error(xhr.responseText);
                        }
                    });
                } else {
                    // Xử lý khi input không có giá trị
                    // Ví dụ: ẩn hoặc xóa kết quả trước đó
                    $('.loadOrder').html('');
                }
            });





            $('.btnExportWareHouse').click(function () {
                var orderId = $(this).data('id');
                $.ajax({
                    url: '/WareHouse/ExportWareHouse/Partial_ExportWareHouse', // Thay ControllerName bằng tên controller thực tế của bạn
                    type: 'POST',
                    dataType: 'json',
                    data: { Orderid: orderId },
                    success: function (response) {
                        if (response.Success) {
                            // Xử lý thành công, ví dụ: chuyển hướng trang
                            window.location.href = response.Url;
                        } else {
                            // Xử lý lỗi, bạn có thể hiển thị thông báo hoặc thực hiện hành động khác
                            alert('Đã xảy ra lỗi: ' + response.Code);
                        }
                    },
                    error: function (xhr, status, error) {
                        // Xử lý lỗi AJAX, nếu có
                        console.error(xhr.responseText);
                    }
                });
            });

        });

    </script>


}

