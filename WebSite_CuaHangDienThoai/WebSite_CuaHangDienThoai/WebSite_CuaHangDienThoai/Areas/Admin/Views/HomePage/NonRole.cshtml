            padding: 0.75rem;
        }

        .invoice-table th {
            background-color: #f8f9fa;
            font-weight: bold;
        }

    .invoice-footer {
        margin-top: 2rem;
        text-align: center;
    }

    .signature {
        display: flex;
        justify-content: space-between;
        margin-top: 2rem;
    }

    .qr-code {
        margin-top: 2rem;
        display: flex;
        justify-content: center;
    }

