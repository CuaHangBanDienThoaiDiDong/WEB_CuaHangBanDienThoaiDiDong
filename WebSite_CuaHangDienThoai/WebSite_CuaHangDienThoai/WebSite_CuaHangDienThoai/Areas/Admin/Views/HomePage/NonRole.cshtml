<style>
    .invoice-container {
        margin-top: 2rem;
    }

    .invoice-header {
        text-align: center;
    }

        .invoice-header h1 {
            font-size: 2rem;
            margin-bottom: 0.5rem;
        }

        .invoice-header p {
            font-size: 1.2rem;
            color: #6c757d;
        }

    .invoice-body {
        margin-top: 2rem;
    }

    .invoice-table {
        width: 100%;
    }

