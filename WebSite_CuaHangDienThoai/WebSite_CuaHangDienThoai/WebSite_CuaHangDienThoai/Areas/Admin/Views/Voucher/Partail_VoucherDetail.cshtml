
@model IEnumerable<WebSite_CuaHangDienThoai.Models.tb_VoucherDetail>

<div class="card">
    <div class="card-header">
        <div class="card-title">
            Danh sách Voucher
        </div>
    </div>
   
    <div class="card-body">
        <div class="row text-center">
            @if (ViewBag.Count != null)
            {
                foreach (var item in Model)
                {
                    
                    <div class="col-3 "style="margin-left: 5px; margin-right: 5px;">
                            <div class="card">
                                <div class="card-header">
                                    <div class="card-title">
                                        Mã Vouvher : @item.Code
                                        @if (item.Status == true)
                                        {

                                            <br />
                                            <h5 class="d-flex align-items-center">
                                                Trạng thái:
                                                <span class="ml-2" style="color: forestgreen">Đã dùng</span>
                                            </h5>

                                            <p> <label>Mã đơn hàng : </label> <a href="/admin/order/Detail/@item.OrderId" target="_blank">@item.tb_Order.Code</a></p>
                                        }
                                        else
                                        {
                                            <h5 class="text-danger"> Còn hạng </h5>

                                        }
                                    </div>
                                </div>
                                <div class="card-body">
                                    @*<p>Đơn hàng  @item.tb_Order.Code</p>*@
                                </div>
                            </div>
                        </div>

                  
                }
             }               
            else
            {
                <p class="text-danger">Không tồn tại bảng ghi nào !!!</p>
            }
        </div>
      
    </div>
</div>
