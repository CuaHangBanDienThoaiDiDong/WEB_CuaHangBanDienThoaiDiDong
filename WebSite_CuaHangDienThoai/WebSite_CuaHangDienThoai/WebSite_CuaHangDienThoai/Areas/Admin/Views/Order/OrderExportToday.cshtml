    $(document).ready(function () {
        $(document).on('click', '.pagination a', function (e) {
            e.preventDefault();
            var page = $(this).attr('data-page');
            LoadIndex(page);
        });
        LoadIndex(1)
    });

        function LoadIndex(page) {
            $.ajax({
                url: '/admin/Order/Partial_OrderExportToday',
                type: 'GET',
                data: { page: page },
                success: function (rs) {
                    $('#loadOrderExport').html(rs);
                },
                error: function (error) {
                    console.log(error);
                }
            });
        }


